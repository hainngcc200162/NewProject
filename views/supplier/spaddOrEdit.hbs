<h3>{{viewTitle}}</h3>
<form action="/supplier/addsupplier" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{supplier._id}}">
    <div class="form-group md-6">
        <label>Supplier Name</label>
        <input type="text" class="form-control" name="spname" value="{{supplier.spname}}" placeholder="Supplier Name">
        <div class="text-danger">
            {{supplier.spnameError}}
        </div>
    </div>
    <div class="form-group md-6">
        <label>Supplier Address</label>
        <input type="text" class="form-control" name="spaddress" value="{{supplier.spaddress}}" placeholder="Supplier Address">
        <div class="text-danger">
            {{supplier.spaddressError}}
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/supplier" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>