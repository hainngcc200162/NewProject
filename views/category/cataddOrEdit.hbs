<h3>{{viewTitle}}</h3>
<form action="/category/addcategory" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{category._id}}">
    <div class="form-group md-6">
        <label>Category Name</label>
        <input type="text" class="form-control" name="catname" value="{{category.catname}}" placeholder="Category Name">
        <div class="text-danger">
            {{category.catnameError}}
        </div>
    </div>
    <div class="form-group md-6">
        <label>Category Description</label>
        <input type="text" class="form-control" name="catdescription" value="{{category.catdescription}}" placeholder="Category Description">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/category" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>