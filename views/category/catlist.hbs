<h3>
    <a href="/category/addcategory/" class="btn btn-danger">
        <i class="fa fa-plus"> </i> Create New
    </a>
    Categories List
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Category Description</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.catname}}</td>
            <td>{{this.catdescription}}</td>
            <td>
                <a href="/category/{{this._id}}">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                </a>
            </td>
            <td> 
                <a href="/category/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true">

                    </i>
                </a>
            </td>   
        </tr>
        {{/each}}
    </tbody>
</table>